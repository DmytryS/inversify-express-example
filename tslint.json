{
    "defaultSeverity": "error",
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
    "extends": ["tslint:recommended"],
    "rules": {
        "no-console": true,
        "no-debugger": true,
        "no-use-before-declare": false,
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "trailing-comma": false,
        "arrow-parens": true,
        "ordered-imports": false
    }
}
