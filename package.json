{
    "name": "inversify-example",
    "version": "1.0.0",
    "description": "Example project using inversify",
    "license": "MIT",
    "repository": {
        "url": "https://github.com/inversify/inversify-code-samples.git"
    },
    "author": "Dmytry Shvaika",
    "keywords": [
        "typescript",
        "project structure",
        "inversify",
        "nodejs"
    ],
    "scripts": {
        "start": "NODE_ENV=production node ./build/index.js",
        "dev": "NODE_ENV=development nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' ./src/index.ts",
        "test": "NODE_ENV=test mocha -r ts-node/register ./tests/**/*.spec.ts --exit",
        "test:coverage": "nyc npm run test && nyc report --reporter=html --reporter=lcov",
        "build": "tsc && cp -r ./src/templates ./build/templates",
        "format": "prettier --check 'src/**/*.{ts,json,md, gql}'",
        "format:fix": "prettier --write 'src/**/*.{ts,json,md,gql}'",
        "tslint": "tslint -p ./tsconfig.json",
        "tslint:fix": "tslint --fix --format stylish -p ./tsconfig.json",
        "lint": "npm run format && npm run tslint",
        "lint:fix": "npm run format:fix && npm run tslint:fix"
    },
    "dependencies": {
        "bcrypt": "^3.0.4",
        "bluebird": "^3.5.3",
        "body-parser": "^1.18.3",
        "express": "^4.16.4",
        "handlebars": "^4.1.2",
        "handlebars-layouts": "^3.1.4",
        "inversify": "^5.0.1",
        "inversify-binding-decorators": "^4.0.0",
        "inversify-express-utils": "^6.3.2",
        "jsonwebtoken": "^8.4.0",
        "log4js": "^4.0.2",
        "moment": "^2.24.0",
        "mongoose": "^5.4.13",
        "nconf": "^0.10.0",
        "nodemailer": "^5.1.1",
        "passport": "^0.4.0",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "reflect-metadata": "^0.1.13",
        "restify": "^7.7.0",
        "restify-cors-middleware": "^1.1.1",
        "restify-errors": "^6.1.1",
        "swagger-express-ts": "^1.0.1",
        "swagger-ui-dist": "^3.21.0",
        "tsc": "^1.20150623.0",
        "typegoose": "^5.6.0",
        "typescript": "^3.1.6"
    },
    "devDependencies": {
        "@hapi/joi": "^15.0.1",
        "@istanbuljs/nyc-config-typescript": "^0.1.3",
        "@types/chai": "^4.1.7",
        "@types/express": "^4.16.1",
        "@types/inversify": "^2.0.33",
        "@types/mocha": "^5.2.6",
        "@types/node": "^11.13.9",
        "@types/restify-errors": "^4.3.3",
        "chai": "^4.2.0",
        "mocha": "^6.1.4",
        "nodemon": "^1.18.10",
        "nyc": "^14.1.0",
        "prettier": "^1.16.4",
        "should": "^13.2.3",
        "sinon": "^7.3.2",
        "sinon-chai": "^3.3.0",
        "source-map-support": "^0.5.12",
        "supertest": "^4.0.2",
        "supertest-promised": "^1.0.0",
        "ts-node": "^7.0.1",
        "tslint": "^5.16.0"
    },
    "engines": {
        "node": ">=4.1.1"
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "extension": [
            ".ts"
        ],
        "include": [
            "src/**/*.ts"
        ],
        "exclude": [
            "**/*.spec.ts",
            "src/libs/**/*"
        ],
        "reporter": [
            "text",
            "lcov"
        ],
        "all": true,
        "branches": 90,
        "lines": 90,
        "functions": 90,
        "statements": 90
    }
}
